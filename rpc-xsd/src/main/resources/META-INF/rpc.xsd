<?xml version="1.0"?>
<xsd:schema xmlns="https://www.kangyonggan.com/schema/rpc"
            xmlns:xsd="http://www.w3.org/2001/XMLSchema"
            targetNamespace="https://www.kangyonggan.com/schema/rpc">
    <!-- 应用 -->
    <xsd:element name="application">
        <xsd:complexType>
            <!--应用ID-->
            <xsd:attribute name="id" type="xsd:string" fixed="application"/>
            <!--应用名称-->
            <xsd:attribute name="name" type="xsd:string" use="required"/>
        </xsd:complexType>
    </xsd:element>

    <!-- 服务端 -->
    <xsd:element name="server">
        <xsd:complexType>
            <!-- 服务ID -->
            <xsd:attribute name="id" type="xsd:string" fixed="server"/>
            <!-- 监听端口 -->
            <xsd:attribute name="port" type="xsd:string" use="required"/>
        </xsd:complexType>
    </xsd:element>

    <!-- 注册中心 -->
    <xsd:element name="register">
        <xsd:complexType>
            <!-- ID -->
            <xsd:attribute name="id" type="xsd:string" fixed="register"/>
            <!-- 类型 -->
            <xsd:attribute name="type" type="xsd:string" use="required"/>
            <!-- ip -->
            <xsd:attribute name="ip" type="xsd:string"/>
            <!-- 端口 -->
            <xsd:attribute name="port" type="xsd:string"/>
            <!-- 用户名 -->
            <xsd:attribute name="username" type="xsd:string"/>
            <!-- 密码 -->
            <xsd:attribute name="password" type="xsd:string"/>
        </xsd:complexType>
    </xsd:element>

    <!-- 服务 -->
    <xsd:element name="service">
        <xsd:complexType>
            <!-- ID -->
            <xsd:attribute name="id" type="xsd:string" use="required"/>
            <!-- 服务接口名称 -->
            <xsd:attribute name="name" type="xsd:string" use="required"/>
            <!-- 服务实现类 -->
            <xsd:attribute name="impl" type="xsd:string"/>
            <!-- 服务实现相关类 -->
            <xsd:attribute name="ref" type="xsd:string"/>
            <!-- 版本 -->
            <xsd:attribute name="version" type="xsd:string"/>
            <!-- 权重 -->
            <xsd:attribute name="weight" default="5">
                <xsd:simpleType>
                    <xsd:restriction base="xsd:integer">
                        <xsd:minInclusive value="0"/>
                        <xsd:maxInclusive value="10"/>
                    </xsd:restriction>
                </xsd:simpleType>
            </xsd:attribute>
        </xsd:complexType>
    </xsd:element>
</xsd:schema>